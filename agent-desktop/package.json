{
  "name": "flowtrack-desktop-agent",
  "version": "0.1.0",
  "description": "FlowTrack desktop time-tracking agent.",
  "author": "FlowTrack",
  "private": true,
  "main": "main.js",
  "scripts": {
    "build": "node build.js",
    "start": "npm run build && electron .",
    "dist": "npm run build && electron-builder"
  },
  "dependencies": {
    "react": "^18.3.1",
    "react-dom": "^18.3.1"
  },
  "devDependencies": {
    "@types/react": "^18.3.5",
    "@types/react-dom": "^18.3.0",
    "esbuild": "^0.21.5",
    "typescript": "^5.6.3",
    "electron": "^24.8.0",
    "electron-builder": "^24.13.3"
  },
  "build": {
    "appId": "io.flowtrack.agent",
    "productName": "FlowTrack Desktop Agent",
    "directories": {
      "output": "dist"
    },
    "files": [
      "**/*",
      "!dist/**/*"
    ],
    "win": {
      "target": "nsis"
    }
  }
}
