{
  "manifest_version": 3,
  "name": "FlowTrack Browser Agent",
  "version": "0.1.0",
  "description": "Extension FlowTrack pour suivre le temps et les URLs actives dans le navigateur.",
  "permissions": ["storage", "tabs", "alarms"],
  "host_permissions": ["*://*/*"],
  "background": {
    "service_worker": "background.js"
  },
  "options_ui": {
    "page": "options.html",
    "open_in_tab": true
  },
  "action": {
    "default_title": "FlowTrack Agent"
  }
}
